<div class="login">
  <%= form_for @conn, auth_path(@conn, :create), [as: :auth], fn f -> %>
    <div class="field">
      <%= email_input(f, :email,
          id: "auth_email",
          class: "input is-medium",
          placeholder: gettext("Your e-mail"),
          required: true) %>
      <%= error_tag(f, :email) %>
    </div>
    <div class="field">
      <%= submit("Submit", class: "button is-primary is-medium") %>
    </div>
  <% end %>
</div>
