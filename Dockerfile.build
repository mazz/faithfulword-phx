FROM bitwalker/alpine-elixir-phoenix:1.7.3

ENV MIX_ENV prod

# Add the files to the image
ADD . . 

# Cache Elixir deps
RUN mix local.hex --force
RUN mix local.rebar --force
RUN mix deps.get --only prod
RUN mix deps.compile

WORKDIR assets
# Cache Node deps
# node needs pngquant, which needs libpng
RUN apk update
RUN apk add libpng-dev
RUN npm i npm@latest -g # fails on ubuntu 18.04
RUN npm i

# Compile JavaScript
RUN npm run deploy

WORKDIR ..
# Compile app
RUN mix compile
RUN mix phx.digest

# Generate release
ENTRYPOINT ["mix"]
CMD ["release", "--env=prod"]

